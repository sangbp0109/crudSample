<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">

	<resultMap type="com.spring.board.vo.ComCodeVo" id="comCodeVo">
    	<result property="codeType" 	column="CODE_TYPE"/>
    	<result property="codeId" 		column="CODE_ID"/>
    	<result property="codeName" 	column="CODE_NAME"/>
    </resultMap>
    
    <resultMap type="com.spring.user.vo.UserInfoVo" id="userInfoVo">
    	<result property="userId" 		column="USER_ID"/>
    	<result property="userPw" 		column="USER_PW"/>
    	<result property="userName" 	column="USER_NAME"/>
    	<result property="userPhone1" 	column="USER_PHONE1"/>
    	<result property="userPhone2" 	column="USER_PHONE2"/>
    	<result property="userPhone3" 	column="USER_PHONE3"/>
    	<result property="userPostNo" 	column="USER_POSTNO"/>
    	<result property="userAddr" 	column="USER_ADDR"/>
    	<result property="userCompany" 	column="USER_COMPANY"/>
    </resultMap>



	<select id="phoneNumberList" parameterType="com.spring.board.vo.ComCodeVo" resultMap="comCodeVo">
    	SELECT 
    		CODE_NAME,
    		CODE_ID
    	FROM 
    		COM_CODE
    	WHERE 
    		CODE_TYPE = 'phone'
    </select>

	<select id="findById" parameterType="String" resultMap="userInfoVo">
		SELECT
			*
		FROM
			USER_INFO
		WHERE
			USER_ID = #{id}
	</select>
	
	<insert id="userJoin" parameterType="com.spring.user.vo.UserInfoVo">
        INSERT INTO 
	        USER_INFO
	        (USER_ID
	        ,USER_PW
	        ,USER_NAME
	        ,USER_PHONE1
	        ,USER_PHONE2
	        ,USER_PHONE3
	        ,USER_POSTNO
	        ,USER_ADDR
	        ,USER_COMPANY
	        ,CREATOR
	        ,CREATE_TIME
	        ,MODIFIER
	        ,MODIFIED_TIME
       		)
        VALUES
       		(#{userId}
       		,#{userPw}
	        ,#{userName}
	        ,#{userPhone1}
	        ,#{userPhone2}
	        ,#{userPhone3}
	        ,#{userPostNo}
	        ,#{userAddr}
	        ,#{userCompany}
	        ,'SYSTEM'
	        ,TO_CHAR(SYSDATE)
	        ,'SYSTEM'
	        ,TO_CHAR(SYSDATE)
	        )
    </insert>
    
    <select id="userLogin" resultType="String">
    	SELECT
    		USER_NAME as userName
    	FROM
    		USER_INFO
    	WHERE
    		USER_ID = #{userId}
    	AND
    		USER_PW = #{userPw}
    </select>



</mapper>
